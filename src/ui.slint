                if current-view == "machine" : VerticalBox {
                    spacing: 0px;
                    padding: 10px;
                    horizontal-stretch: 1.0;
                    vertical-stretch: 1.0;
                    
                    ScrollView {
                        VerticalBox {
                            spacing: 15px;
                            padding: 5px;
                            padding-right: 5px;
                            
                            // DRO Display (moved to top)
                            Rectangle {
                                background: #ecf0f1;
                                height: 175px;
                                
                                VerticalBox {
                                    padding: 10px;
                                    spacing: 4px;
                                    
                                    Text {
                                        text: "Position (Work)";
                                        font-weight: 700;
                                        font-size: 14px;
                                    }
                                    
                                    // Linear axes (X, Y, Z) + Feed
                                    HorizontalBox {
                                        spacing: 10px;
                                        alignment: start;
                                        
                                        HorizontalBox {
                                            width: 23%;
                                            spacing: 4px;
                                            Text { 
                                                text: "X:"; 
                                                width: 20px;
                                                vertical-alignment: center;
                                            }
                                            LineEdit {
                                                read-only: true;
                                                text: round(root.position-x * 1000.0) / 1000.0 + " mm\u{2003}";
