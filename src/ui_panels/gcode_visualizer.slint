//! G-Code Visualizer Panel
//! Displays a 3D visualization of the loaded G-Code toolpath
//! Shows machine position, bounding box, and real-time tool movement

import { ScrollView, VerticalBox, HorizontalBox, Button, GridBox } from "std-widgets.slint";

export component GcodeVisualizerPanel {
    horizontal-stretch: 1.0;
    vertical-stretch: 1.0;

    in property <string> gcode-filename: "untitled.gcode";
    in property <string> machine-x: "0.000";
    in property <string> machine-y: "0.000";
    in property <string> machine-z: "0.000";
    in property <string> work-x: "0.000";
    in property <string> work-y: "0.000";
    in property <string> work-z: "0.000";
    in property <float> progress: 0.0;
    in property <string> visualizer-status: "Ready";
    
    callback refresh-visualization();
    callback zoom-in();
    callback zoom-out();
    callback fit-to-view();
    callback reset-view();

    VerticalBox {
        spacing: 8px;
        padding: 12px;

        // Toolbar
        HorizontalBox {
            height: 40px;
            spacing: 8px;
            alignment: start;

            Text {
                text: "Visualization Controls:";
                font-weight: 700;
                font-size: 12px;
                color: #2c3e50;
            }

            Button {
                text: "ðŸ”„ Refresh";
                width: 100px;
                clicked => {
                    root.refresh-visualization();
                }
            }

            Button {
                text: "ðŸ”+ Zoom In";
                width: 100px;
                clicked => {
                    root.zoom-in();
                }
            }

            Button {
                text: "ðŸ”- Zoom Out";
                width: 100px;
                clicked => {
                    root.zoom-out();
                }
            }

            Button {
                text: "âŠ¡ Fit";
                width: 80px;
                clicked => {
                    root.fit-to-view();
                }
            }

            Button {
                text: "â†º Reset";
                width: 80px;
                clicked => {
                    root.reset-view();
                }
            }
        }

        // Status bar
        Rectangle {
            height: 24px;
            background: #ecf0f1;
            border-width: 1px;
            border-color: #bdc3c7;
            border-radius: 2px;

            HorizontalBox {
                padding-left: 4px;
                padding-right: 8px;
                padding-top: 4px;
                padding-bottom: 4px;
                alignment: start;
                spacing: 20px;

                Text {
                    text: "File: " + root.gcode-filename;
                    font-size: 11px;
                    color: #34495e;
                    overflow: elide;
                }

                Text {
                    text: "Status: " + root.visualizer-status;
                    font-size: 11px;
                    color: #34495e;
                }
            }
        }

        // Main visualization area with scrollview
        ScrollView {
            width: 100%;
            height: 100%;

            Rectangle {
                background: #ffffff;
                border-width: 1px;
                border-color: #bdc3c7;
                border-radius: 3px;
                width: 100%;
                min-height: 400px;

                VerticalBox {
                    padding: 20px;
                    spacing: 12px;
                    alignment: center;

                    // 3D Visualizer Placeholder
                    Rectangle {
                        width: 100%;
                        height: 350px;
                        background: #2c3e50;
                        border-width: 2px;
                        border-color: #3d5470;
                        border-radius: 4px;

                        VerticalBox {
                            alignment: center;
                            spacing: 8px;

                            Text {
                                text: "3D Toolpath Visualization";
                                font-size: 14px;
                                font-weight: 700;
                                color: #ecf0f1;
                            }

                            Text {
                                text: "(3D canvas will render here)";
                                font-size: 12px;
                                color: #bdc3c7;
                            }

                            Rectangle {
                                width: 60px;
                                height: 60px;
                                background: #34495e;
                                border-radius: 4px;

                                Text {
                                    text: "ðŸŽ¨";
                                    font-size: 36px;
                                    horizontal-alignment: center;
                                    vertical-alignment: center;
                                }
                            }
                        }
                    }

                    // Progress indicator
                    VerticalBox {
                        width: 100%;
                        spacing: 4px;

                        HorizontalBox {
                            spacing: 8px;
                            alignment: space-between;

                            Text {
                                text: "Execution Progress:";
                                font-size: 11px;
                                font-weight: 700;
                                color: #34495e;
                            }

                            Text {
                                text: Math.round(root.progress * 100) + "%";
                                font-size: 11px;
                                font-weight: 700;
                                color: #e74c3c;
                            }
                        }

                        Rectangle {
                            height: 20px;
                            background: #ecf0f1;
                            border-width: 1px;
                            border-color: #bdc3c7;
                            border-radius: 2px;

                            Rectangle {
                                width: (root.progress * 100%) * 1px;
                                height: 100%;
                                background: #27ae60;
                                border-radius: 1px;
                            }

                            Text {
                                text: Math.round(root.progress * 100) + "%";
                                font-size: 10px;
                                color: #2c3e50;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }
                        }
                    }

                    // Position display
                    GridBox {
                        spacing: 12px;
                        width: 100%;

                        Rectangle {
                            col: 0;
                            row: 0;
                            background: #f8f9fa;
                            border-width: 1px;
                            border-color: #dee2e6;
                            border-radius: 2px;
                            padding-left: 8px;
                            padding-right: 8px;
                            padding-top: 8px;
                            padding-bottom: 8px;
                            width: 120px;
                            height: 70px;

                            VerticalBox {
                                alignment: center;
                                spacing: 4px;

                                Text {
                                    text: "Machine Position";
                                    font-size: 10px;
                                    font-weight: 700;
                                    color: #34495e;
                                }

                                Text {
                                    text: "X: " + root.machine-x;
                                    font-size: 10px;
                                    color: #2c3e50;
                                }

                                Text {
                                    text: "Y: " + root.machine-y;
                                    font-size: 10px;
                                    color: #2c3e50;
                                }

                                Text {
                                    text: "Z: " + root.machine-z;
                                    font-size: 10px;
                                    color: #2c3e50;
                                }
                            }
                        }

                        Rectangle {
                            col: 1;
                            row: 0;
                            background: #f8f9fa;
                            border-width: 1px;
                            border-color: #dee2e6;
                            border-radius: 2px;
                            padding-left: 8px;
                            padding-right: 8px;
                            padding-top: 8px;
                            padding-bottom: 8px;
                            width: 120px;
                            height: 70px;

                            VerticalBox {
                                alignment: center;
                                spacing: 4px;

                                Text {
                                    text: "Work Position";
                                    font-size: 10px;
                                    font-weight: 700;
                                    color: #34495e;
                                }

                                Text {
                                    text: "X: " + root.work-x;
                                    font-size: 10px;
                                    color: #2c3e50;
                                }

                                Text {
                                    text: "Y: " + root.work-y;
                                    font-size: 10px;
                                    color: #2c3e50;
                                }

                                Text {
                                    text: "Z: " + root.work-z;
                                    font-size: 10px;
                                    color: #2c3e50;
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
