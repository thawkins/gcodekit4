//! CNC Tools Panel
//! Provides a collection of CNC-specific tools and utilities

import { Button, VerticalBox, HorizontalBox, ScrollView } from "std-widgets.slint";

component ToolCard inherits Rectangle {
    in property <string> tool-title: "Tool";
    in property <string> tool-description: "Description";
    
    callback clicked();
    
    width: 200px;
    height: 200px;
    background: white;
    border-width: 1px;
    border-color: #ccc;
    border-radius: 4px;
    
    VerticalBox {
        padding: 10px;
        spacing: 8px;
        
        Text {
            text: tool-title;
            font-size: 14px;
            font-weight: 600;
            horizontal-alignment: center;
        }
        
        Rectangle {
            vertical-stretch: 1;
            
            Text {
                text: tool-description;
                font-size: 12px;
                color: #666;
                horizontal-alignment: center;
                vertical-alignment: center;
                wrap: word-wrap;
            }
        }
    }
    
    TouchArea {
        mouse-cursor: pointer;
        clicked => {
            parent.clicked();
        }
    }
}

