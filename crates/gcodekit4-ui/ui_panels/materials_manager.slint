                                alignment: start;
                                spacing: 10px;
                                padding-top: 10px;
                                
                                // Density
                                HorizontalBox {
                                    spacing: 8px;
                                    Text { text: "Density (kg/mÂ³):"; width: 150px; vertical-alignment: center; color: #aaaaaa; }
                                    MMInput {
                                        text: edit_density;
                                        input-type: decimal;
                                        edited(val) => {
                                            edit_density = val.to-float();
                                        }
                                    }
                                }
                                
                                // Machinability rating
                                HorizontalBox {
                                    spacing: 8px;
                                    Text { text: "Machinability (1-10):"; width: 150px; vertical-alignment: center; color: #aaaaaa; }
                                    MMSpinBox {
                                        minimum: 1;
                                        maximum: 10;
                                        value <=> edit_machinability;
                                    }
                                }
                                
                                // Tensile strength
                                HorizontalBox {
                                    spacing: 8px;
                                    Text { text: "Tensile Strength (MPa):"; width: 150px; vertical-alignment: center; color: #aaaaaa; }
                                    MMInput {
                                        text: edit_tensile_strength;
                                        input-type: decimal;
                                        placeholder-text: "Optional";
                                        edited(val) => {
