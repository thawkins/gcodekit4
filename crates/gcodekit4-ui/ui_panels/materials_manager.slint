                                // Coolant required
                                HorizontalBox {
                                    spacing: 8px;
                                    MMCheckBox {
                                        text: "Coolant Required";
                                        checked <=> edit_coolant_required;
                                    }
                                }
                                
                                // PPE Requirements
                                GroupBox {
                                    title: "Required PPE";
                                    
                                    VerticalBox {
                                        spacing: 5px;
                                        
                                        Text {
                                            text: "Eye Protection, Respiratory, Hearing Protection, Gloves, Apron";
