                                    spacing: 8px;
                                    Text { text: "Name:"; width: 120px; vertical-alignment: center; color: #aaaaaa; }
                                    MMInput {
                                        placeholder-text: "Material name";
                                        text <=> edit_name;
                                    }
                                }
                                
