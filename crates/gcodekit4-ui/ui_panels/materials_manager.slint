                                    spacing: 8px;
                                    Text { text: "Category:"; width: 120px; vertical-alignment: center; color: #aaaaaa; }
                                    ComboBox {
                                        model: categories;
                                        current-value <=> edit_category;
                                    }
                                }
                                
                                // Subcategory
