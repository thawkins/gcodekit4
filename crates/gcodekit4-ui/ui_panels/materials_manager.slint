                                    ComboBox {
                                        model: heat_sensitivities;
                                        current-value <=> edit_heat_sensitivity;
                                    }
                                }
                                
                                // Abrasiveness
                                HorizontalBox {
                                    spacing: 8px;
                                    Text { text: "Abrasiveness:"; width: 150px; vertical-alignment: center; color: #aaaaaa; }
                                    ComboBox {
                                        model: abrasiveness_levels;
                                        current-value <=> edit_abrasiveness;
                                    }
                                }
                                
                                // Surface finish
                                HorizontalBox {
                                    spacing: 8px;
                                    Text { text: "Surface Finish:"; width: 150px; vertical-alignment: center; color: #aaaaaa; }
                                    ComboBox {
                                        model: surface_finishes;
                                        current-value <=> edit_surface_finish;
                                    }
                                }
                            }
