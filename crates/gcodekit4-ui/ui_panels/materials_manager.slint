                                    spacing: 8px;
                                    Text { text: "Subcategory:"; width: 120px; vertical-alignment: center; color: #aaaaaa; }
                                    MMInput {
                                        placeholder-text: "e.g., Hardwood, Alloy";
                                        text <=> edit_subcategory;
                                    }
                                }
                                
