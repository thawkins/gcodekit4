/// Configuration Settings Panel
/// Display and manage GRBL controller configuration settings

import { Button, ComboBox, LineEdit, VerticalBox, HorizontalBox, ScrollView, ListView } from "std-widgets.slint";
import { Theme } from "../ui/theme.slint";
import { StandardButton, StandardInput } from "../ui/ui_components/shared.slint";

export struct ConfigSetting {
    number: int,
    name: string,
    value: string,
    unit: string,
    description: string,
    category: string,
    read-only: bool,
}

export component ConfigSettingsPanel inherits Rectangle {
    in property <bool> connected: false;
    in property <[ConfigSetting]> settings: [];
    in property <[ConfigSetting]> filtered-settings: [];
    in property <string> status-message: "";
    in property <bool> has-loaded-settings: false;
    in-out property <string> filter-text: "";
    in-out property <string> selected-category: "All";
    
    // Edit dialog properties
    in-out property <bool> show-edit-dialog: false;
    in-out property <int> edit-setting-number: 0;
    in-out property <string> edit-setting-name: "";
    in-out property <string> edit-setting-value: "";
    in-out property <string> edit-setting-unit: "";
    in-out property <string> edit-setting-description: "";
    
    callback retrieve-settings();
    callback save-to-file();
    callback load-from-file();
    callback restore-to-device();
    callback edit-setting(int);
    callback save-edited-setting(int, string);
    callback filter-changed();
    
    background: Theme.background;
    
    VerticalBox {
        spacing: 10px;
        padding: 10px;
        
        // Toolbar
        HorizontalBox {
            spacing: 8px;
            padding: 5px;
            alignment: start;
            
            StandardButton {
                text: "Retrieve";
                width: 80px;
                tooltip: "Retrieve Settings from Device ($$)";
                enabled: root.connected;
                clicked => { root.retrieve-settings(); }
            }
            
            StandardButton {
                text: "Save";
                width: 80px;
                tooltip: "Save Settings to File";
                enabled: root.has-loaded-settings;
                clicked => { root.save-to-file(); }
            }
            
            StandardButton {
                text: "Load";
                width: 80px;
                tooltip: "Load Settings from File";
                clicked => { root.load-from-file(); }
            }
            
            StandardButton {
                text: "Restore";
                width: 80px;
                tooltip: "Restore Settings to Device";
                enabled: root.has-loaded-settings && root.connected;
                clicked => { root.restore-to-device(); }
            }
        }
        
        // Filter bar
        HorizontalBox {
            spacing: 8px;
            padding: 5px;
            height: 40px;
            
            Text {
                text: "Filter:";
                vertical-alignment: center;
                color: Theme.text-secondary;
            }
            
            StandardInput {
                placeholder-text: "Search settings...";
                text <=> root.filter-text;
                horizontal-stretch: 1;
                edited => {
                    root.filter-changed();
                }
            }
            
            Text {
                text: "Category:";
                vertical-alignment: center;
                color: Theme.text-secondary;
            }
            
            ComboBox {
                model: ["All", "Steps Per Unit", "Max Rate", "Acceleration", "Max Travel", "Homing", "Limits", "Spindle", "System"];
                current-value <=> root.selected-category;
                width: 150px;
                selected => {
                    root.filter-changed();
                }
            }
        }
        
        // Settings list header
        Rectangle {
            height: 30px;
            background: Theme.panel-background;
            
            HorizontalBox {
                padding: 5px;
                spacing: 5px;
                
                Text {
                    text: "ID";
                    color: Theme.text-primary;
                    font-weight: 700;
                    width: 50px;
                    font-size: 12px;
                }
                
                Text {
                    text: "Name";
                    color: Theme.text-primary;
                    font-weight: 700;
                    width: 200px;
                    font-size: 12px;
                }
                
                Text {
                    text: "Value";
                    color: Theme.text-primary;
                    font-weight: 700;
                    width: 100px;
                    font-size: 12px;
                }
                
                Text {
                    text: "Unit";
                    color: Theme.text-primary;
                    font-weight: 700;
                    width: 80px;
                    font-size: 12px;
                }
                
                Text {
                    text: "Category";
                    color: Theme.text-primary;
                    font-weight: 700;
                    width: 150px;
                    font-size: 12px;
                }
                
                Text {
                    text: "Description";
                    color: Theme.text-primary;
                    font-weight: 700;
                    horizontal-stretch: 1;
                    font-size: 12px;
                }
            }
        }
        
        // Settings list
        ScrollView {
            vertical-stretch: 1;
            
            ListView {
                for setting[index] in root.filtered-settings: Rectangle {
                    height: 40px;
                    background: Math.mod(index, 2) == 0 ? Theme.background : Theme.panel-background;
                    
                    HorizontalBox {
                        padding: 5px;
                        spacing: 5px;
                        
                        Text {
                            text: "$" + setting.number;
                            width: 50px;
                            vertical-alignment: center;
                            color: setting.read-only ? Theme.text-muted : Theme.text-secondary;
                            font-size: 12px;
                        }
                        
                        Text {
                            text: setting.name;
                            width: 200px;
                            vertical-alignment: center;
                            font-weight: 600;
                            color: setting.read-only ? Theme.text-muted : Theme.text-primary;
                            font-size: 12px;
                        }
                        
                        Text {
                            text: setting.value;
                            width: 100px;
                            vertical-alignment: center;
                            color: Theme.success;
                            font-size: 12px;
                        }
                        
                        Text {
                            text: setting.unit;
                            width: 80px;
                            vertical-alignment: center;
                            color: Theme.text-muted;
                            font-size: 11px;
                        }
                        
                        Text {
                            text: setting.category;
                            width: 150px;
                            vertical-alignment: center;
                            color: Theme.text-muted;
                            font-size: 11px;
                        }
                        
                        Text {
                            text: setting.description;
                            horizontal-stretch: 1;
                            vertical-alignment: center;
                            color: Theme.text-muted;
                            font-size: 11px;
                            overflow: elide;
                        }
                    }
                    
                    TouchArea {
                        clicked => {
                            if (!setting.read-only && root.connected) {
                                root.edit-setting(setting.number);
                            }
                        }
                    }
                }
            }
        }
        
        // Status bar
        Rectangle {
            height: 30px;
            background: Theme.panel-background;
            
            HorizontalBox {
                padding: 5px;
                
                Text {
                    text: root.status-message;
                    vertical-alignment: center;
                    color: Theme.text-primary;
                    font-size: 12px;
                }
                
                Rectangle { horizontal-stretch: 1; }
                
                Text {
                    text: root.filtered-settings.length + " / " + root.settings.length + " settings";
                    vertical-alignment: center;
                    color: Theme.text-muted;
                    font-size: 11px;
                }
            }
        }
    }
    
    // Edit Dialog
    if root.show-edit-dialog : Rectangle {
        background: rgba(0, 0, 0, 0.7);
        
        TouchArea {
            // Block clicks
        }
        
        Rectangle {
            width: 500px;
            height: 350px;
            background: Theme.panel-background;
            border-radius: 8px;
            border-width: 1px;
            border-color: Theme.border;
            
            VerticalBox {
                padding: 20px;
                spacing: 15px;
                
                // Title
                Text {
                    text: "Edit Setting $" + root.edit-setting-number;
                    font-size: 18px;
                    font-weight: 700;
                    color: Theme.text-primary;
                }
                
                // Setting name
                HorizontalBox {
                    spacing: 10px;
                    
                    Text {
                        text: "Name:";
                        font-weight: 600;
                        width: 100px;
                        vertical-alignment: center;
                        color: Theme.text-secondary;
                    }
                    
                    Text {
                        text: root.edit-setting-name;
                        horizontal-stretch: 1;
                        vertical-alignment: center;
                        color: Theme.text-primary;
                    }
                }
                
                // Setting description
                HorizontalBox {
                    spacing: 10px;
                    
                    Text {
                        text: "Description:";
                        font-weight: 600;
                        width: 100px;
                        vertical-alignment: top;
                        color: Theme.text-secondary;
                    }
                    
                    Text {
                        text: root.edit-setting-description;
                        horizontal-stretch: 1;
                        wrap: word-wrap;
                        color: Theme.text-muted;
                    }
                }
                
                // Value input
                HorizontalBox {
                    spacing: 10px;
                    
                    Text {
                        text: "Value:";
                        font-weight: 600;
                        width: 100px;
                        vertical-alignment: center;
                        color: Theme.text-secondary;
                    }
                    
                    StandardInput {
                        text <=> root.edit-setting-value;
                        horizontal-stretch: 1;
                        placeholder-text: "Enter new value";
                    }
                    
                    Text {
                        text: root.edit-setting-unit;
                        width: 60px;
                        vertical-alignment: center;
                        color: Theme.text-muted;
                    }
                }
                
                // Spacer
                Rectangle {
                    vertical-stretch: 1;
                }
                
                // Buttons
                HorizontalBox {
                    spacing: 10px;
                    alignment: end;
                    
                    StandardButton {
                        text: "Cancel";
                        width: 100px;
                        tooltip: "Cancel Editing";
                        clicked => {
                            root.show-edit-dialog = false;
                        }
                    }
                    
                    StandardButton {
                        text: "Save";
                        width: 100px;
                        primary: true;
                        tooltip: "Save Setting Value";
                        clicked => {
                            root.save-edited-setting(root.edit-setting-number, root.edit-setting-value);
                            root.show-edit-dialog = false;
                        }
                    }
                }
            }
        }
    }
}
