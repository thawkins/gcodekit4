/// Configuration Settings Panel
/// Display and manage GRBL controller configuration settings

import { Button, ComboBox, LineEdit, VerticalBox, HorizontalBox, ScrollView, ListView } from "std-widgets.slint";

export struct ConfigSetting {
    number: int,
    name: string,
    value: string,
    unit: string,
    description: string,
    category: string,
    read-only: bool,
}

component DCButton inherits Rectangle {
    in property <string> text;
    in property <bool> enabled: true;
    in property <brush> base-color: #404040;
    in property <brush> hover-color: #505050;
    in property <brush> pressed-color: #2980b9;
    in property <bool> primary: false;
    in property <bool> destructive: false;
    
    callback clicked;
    
    height: 30px;
    border-radius: 4px;
    
    background: !root.enabled ? #2c3e50 : 
                (touch.pressed ? root.pressed-color : 
                (touch.has-hover ? (root.destructive ? #e74c3c : (root.primary ? #357abd : root.hover-color)) : 
                (root.destructive ? #c0392b : (root.primary ? #4a90e2 : root.base-color))));

    opacity: root.enabled ? 1.0 : 0.5;
    
    Text {
        text: root.text;
        color: #ecf0f1;
        font-size: 12px;
        vertical-alignment: center;
        horizontal-alignment: center;
    }
    
    touch := TouchArea {
        enabled: root.enabled;
        clicked => { root.clicked(); }
    }
}

component DCInput inherits Rectangle {
    in-out property <string> text <=> input.text;
    in property <string> placeholder-text <=> input.placeholder-text;
    in property <bool> enabled <=> input.enabled;
    callback edited(string);
    
    height: 30px;
    background: #3e3e3e;
    border-radius: 4px;
    border-width: 1px;
    border-color: input.has-focus ? #4a90e2 : #555555;
    
    input := LineEdit {
        width: 100%;
        height: 100%;
        font-size: 13px;
        edited(s) => { root.edited(s); }
    }
}

export component ConfigSettingsPanel inherits Rectangle {
    in property <bool> connected: false;
    in property <[ConfigSetting]> settings: [];
    in property <[ConfigSetting]> filtered-settings: [];
    in property <string> status-message: "";
    in property <bool> has-loaded-settings: false;
    in-out property <string> filter-text: "";
    in-out property <string> selected-category: "All";
    
    // Edit dialog properties
    in-out property <bool> show-edit-dialog: false;
    in-out property <int> edit-setting-number: 0;
    in-out property <string> edit-setting-name: "";
    in-out property <string> edit-setting-value: "";
    in-out property <string> edit-setting-unit: "";
    in-out property <string> edit-setting-description: "";
    
    callback retrieve-settings();
    callback save-to-file();
    callback load-from-file();
    callback restore-to-device();
    callback edit-setting(int);
    callback save-edited-setting(int, string);
    callback filter-changed();
    
    background: #1e1e1e;
    
    VerticalBox {
        spacing: 10px;
        padding: 10px;
        
        // Toolbar
        HorizontalBox {
            spacing: 8px;
            padding: 5px;
            alignment: start;
            
            DCButton {
                text: "Retrieve";
                width: 80px;
                enabled: root.connected;
                clicked => { root.retrieve-settings(); }
            }
            
            DCButton {
                text: "Save";
                width: 80px;
                enabled: root.has-loaded-settings;
                clicked => { root.save-to-file(); }
            }
            
            DCButton {
                text: "Load";
                width: 80px;
                clicked => { root.load-from-file(); }
            }
            
            DCButton {
                text: "Restore";
                width: 80px;
                enabled: root.has-loaded-settings && root.connected;
                clicked => { root.restore-to-device(); }
            }
        }
        
        // Filter bar
        HorizontalBox {
            spacing: 8px;
            padding: 5px;
            height: 40px;
            
            Text {
                text: "Filter:";
                vertical-alignment: center;
                color: #aaaaaa;
            }
            
            DCInput {
                placeholder-text: "Search settings...";
                text <=> root.filter-text;
                horizontal-stretch: 1;
                edited => {
                    root.filter-changed();
                }
            }
            
            Text {
                text: "Category:";
                vertical-alignment: center;
                color: #aaaaaa;
            }
            
            ComboBox {
                model: ["All", "Steps Per Unit", "Max Rate", "Acceleration", "Max Travel", "Homing", "Limits", "Spindle", "System"];
                current-value <=> root.selected-category;
                width: 150px;
                selected => {
                    root.filter-changed();
                }
            }
        }
        
        // Settings list header
        Rectangle {
            height: 30px;
            background: #252525;
            
            HorizontalBox {
                padding: 5px;
                spacing: 5px;
                
                Text {
                    text: "ID";
                    color: #ffffff;
                    font-weight: 700;
                    width: 50px;
                    font-size: 12px;
                }
                
                Text {
                    text: "Name";
                    color: #ffffff;
                    font-weight: 700;
                    width: 200px;
                    font-size: 12px;
                }
                
                Text {
                    text: "Value";
                    color: #ffffff;
                    font-weight: 700;
                    width: 100px;
                    font-size: 12px;
                }
                
                Text {
                    text: "Unit";
                    color: #ffffff;
                    font-weight: 700;
                    width: 80px;
                    font-size: 12px;
                }
                
                Text {
                    text: "Category";
                    color: #ffffff;
                    font-weight: 700;
                    width: 150px;
                    font-size: 12px;
                }
                
                Text {
                    text: "Description";
                    color: #ffffff;
                    font-weight: 700;
                    horizontal-stretch: 1;
                    font-size: 12px;
                }
            }
        }
        
        // Settings list
        ScrollView {
            vertical-stretch: 1;
            
            ListView {
                for setting[index] in root.filtered-settings: Rectangle {
                    height: 40px;
                    background: Math.mod(index, 2) == 0 ? #1e1e1e : #252525;
                    
                    HorizontalBox {
                        padding: 5px;
                        spacing: 5px;
                        
                        Text {
                            text: "$" + setting.number;
                            width: 50px;
                            vertical-alignment: center;
                            color: setting.read-only ? #7f8c8d : #aaaaaa;
                            font-size: 12px;
                        }
                        
                        Text {
                            text: setting.name;
                            width: 200px;
                            vertical-alignment: center;
                            font-weight: 600;
                            color: setting.read-only ? #7f8c8d : #e0e0e0;
                            font-size: 12px;
                        }
                        
                        Text {
                            text: setting.value;
                            width: 100px;
                            vertical-alignment: center;
                            color: #2ecc71;
                            font-size: 12px;
                        }
                        
                        Text {
                            text: setting.unit;
                            width: 80px;
                            vertical-alignment: center;
                            color: #7f8c8d;
                            font-size: 11px;
                        }
                        
                        Text {
                            text: setting.category;
                            width: 150px;
                            vertical-alignment: center;
                            color: #7f8c8d;
                            font-size: 11px;
                        }
                        
                        Text {
                            text: setting.description;
                            horizontal-stretch: 1;
                            vertical-alignment: center;
                            color: #7f8c8d;
                            font-size: 11px;
                            overflow: elide;
                        }
                    }
                    
                    TouchArea {
                        clicked => {
                            if (!setting.read-only && root.connected) {
                                root.edit-setting(setting.number);
                            }
                        }
                    }
                }
            }
        }
        
        // Status bar
        Rectangle {
            height: 30px;
            background: #252525;
            
            HorizontalBox {
                padding: 5px;
                
                Text {
                    text: root.status-message;
                    vertical-alignment: center;
                    color: #e0e0e0;
                    font-size: 12px;
                }
                
                Rectangle { horizontal-stretch: 1; }
                
                Text {
                    text: root.filtered-settings.length + " / " + root.settings.length + " settings";
                    vertical-alignment: center;
                    color: #7f8c8d;
                    font-size: 11px;
                }
            }
        }
    }
    
    // Edit Dialog
    if root.show-edit-dialog : Rectangle {
        background: rgba(0, 0, 0, 0.7);
        
        TouchArea {
            // Block clicks
        }
        
        Rectangle {
            width: 500px;
            height: 350px;
            background: #2d2d2d;
            border-radius: 8px;
            border-width: 1px;
            border-color: #404040;
            
            VerticalBox {
                padding: 20px;
                spacing: 15px;
                
                // Title
                Text {
                    text: "Edit Setting $" + root.edit-setting-number;
                    font-size: 18px;
                    font-weight: 700;
                    color: #e0e0e0;
                }
                
                // Setting name
                HorizontalBox {
                    spacing: 10px;
                    
                    Text {
                        text: "Name:";
                        font-weight: 600;
                        width: 100px;
                        vertical-alignment: center;
                        color: #aaaaaa;
                    }
                    
                    Text {
                        text: root.edit-setting-name;
                        horizontal-stretch: 1;
                        vertical-alignment: center;
                        color: #e0e0e0;
                    }
                }
                
                // Setting description
                HorizontalBox {
                    spacing: 10px;
                    
                    Text {
                        text: "Description:";
                        font-weight: 600;
                        width: 100px;
                        vertical-alignment: top;
                        color: #aaaaaa;
                    }
                    
                    Text {
                        text: root.edit-setting-description;
                        horizontal-stretch: 1;
                        wrap: word-wrap;
                        color: #7f8c8d;
                    }
                }
                
                // Value input
                HorizontalBox {
                    spacing: 10px;
                    
                    Text {
                        text: "Value:";
                        font-weight: 600;
                        width: 100px;
                        vertical-alignment: center;
                        color: #aaaaaa;
                    }
                    
                    DCInput {
                        text <=> root.edit-setting-value;
                        horizontal-stretch: 1;
                        placeholder-text: "Enter new value";
                    }
                    
                    Text {
                        text: root.edit-setting-unit;
                        width: 60px;
                        vertical-alignment: center;
                        color: #7f8c8d;
                    }
                }
                
                // Spacer
                Rectangle {
                    vertical-stretch: 1;
                }
                
                // Buttons
                HorizontalBox {
                    spacing: 10px;
                    alignment: end;
                    
                    DCButton {
                        text: "Cancel";
                        width: 100px;
                        clicked => {
                            root.show-edit-dialog = false;
                        }
                    }
                    
                    DCButton {
                        text: "Save";
                        width: 100px;
                        primary: true;
                        clicked => {
                            root.save-edited-setting(root.edit-setting-number, root.edit-setting-value);
                            root.show-edit-dialog = false;
                        }
                    }
                }
            }
        }
    }
}
